X	no.map = map;
X	/* Get the first entry */
X	re = clnt_call(client, YPPROC_FIRST, xdr_ypreq_nokey, &no,
X		       xdr_ypresp_key_val, &resp, TIMEOUT);
X	if (re != RPC_SUCCESS) {
X		clnt_perrno(re);
